{
    "scripts": {
        "lintScript": "DEBUG=eslint:cli-engine yarn eslint .",
        "lintStyle": "yarn stylelint */*.css",
        "checkAll": "yarn lintScript ; yarn checkTs ; yarn lintStyle ; yarn tests",
        "pipeline": "yarn install ; yarn build ; yarn checkAll"
    },
    "eslintConfig": {
        "overrides": [
            {
                "files": [
                    "site/*.js"
                ],
                "extends": [
                    "eslint:recommended"
                ],
                "env": {
                    "browser": true
                },
                "parserOptions": {
                    "ecmaVersion": 2015,
                    "sourceType": "script"
                }
            },
            {
                "files": [
                    "builder/*.js"
                ],
                "extends": [
                    "eslint:recommended"
                ],
                "env": {
                    "node": true
                },
                "parserOptions": {
                    "ecmaVersion": 2017,
                    "sourceType": "module"
                }
            },
            {
                "files": [
                    "**/*.ts"
                ],
                "extends": [
                    "eslint:recommended",
                    "plugin:@typescript-eslint/recommended"
                ],
                "parser": "@typescript-eslint/parser",
                "plugins": [
                    "@typescript-eslint"
                ]
            },
            {
                "files": [
                    "**/*.json"
                ],
                "extends": [
                    "plugin:json/recommended"
                ],
                "plugins": [
                    "json"
                ]
            }
        ]
    },
    "cspell": {
        "version": "0.2",
        "language": "en-gb",
        "useGitignore": false,
        "words": [
            "lume"
        ],
        "overrides": [
            {
                "filename": "package.json",
                "words": [
                    "stylelint", "prestons", "syntaxhighlight"
                ]
            }
        ]
    },
    "dependencies": {
        "prettier": "^3.2.5",
        "tsx": "^4.10.5",
        "typescript": "^5.4.5"
    },
    "devDependencies": {
        "eslint": "^8.56.0",
        "eslint-plugin-json": "^3.1.0",
        "stylelint": "^16.5.0",
        "stylelint-config-standard": "^36.0.0",
        "typescript-eslint": "^7.9.0"
    }
}
