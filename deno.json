{
    "imports": {
        "lume/": "https://deno.land/x/lume@v2.2.0/"
    },
    "tasks": {
        "lume": "echo \"import 'lume/cli.ts'\" | deno run -A -",
        "build": "deno task lume",
        "serve": "deno task lume --serve",
        "lint:css": "deno run --allow-env --allow-read --allow-sys _includes/stylelint.ts",
    },
    "compilerOptions": {
        "types": [
            "lume/types.ts"
        ],
        "noUncheckedIndexedAccess": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "strict": true
    },
    "exclude": [
        "_deno",
        "_old-stuff",
        "_site",
        "assets",
        "bin",
        "builder",
        "fixed",
        "node_modules"
    ]
}
