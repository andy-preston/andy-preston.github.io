{
    "exclude": ["_*.ts"],
    "compilerOptions": {
        "alwaysStrict": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "moduleResolution": "Bundler",
        "resolveJsonModule": true,
        "module": "ES6",
        "target": "es5",
        "lib": ["ES2021","DOM"],
        "removeComments": true
    }
}
