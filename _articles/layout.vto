{{ layout "../_all_pages/layout.vto" }}
    <header>
        <h1>{{ title }}</h1>
        {{ if humanDate }}
            <time datetime="{{ shortDate }}">{{ humanDate }}</time>
        {{ /if }}
    </header>
    <section>
        <article>
            {{ content }}
        </article>
    </section>
    <hr>
    <article><a href="/">More stuff to read</a></article>
{{ /layout }}
