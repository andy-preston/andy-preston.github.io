{
    "cSpell.languageSettings": [
        { "languageId": "Vento", "dictionaries": ["html", "javascript"] }
    ],
    "cSpell.words": [
        "Lume"
    ],
    "deno.cache": "./_deno/",
    "deno.disablePaths": [
        "assets/front-illustration.ts",
        "assets/tsconfig.json",
    ],
    "deno.enable": true,
    "deno.lint": true,
    "[javascript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[json]": {
        "editor.defaultFormatter": "vscode.json-language-features"
    }
}
