{
    "$schema": "https://biomejs.dev/schemas/1.8.3/schema.json",
    "organizeImports": {
        "enabled": true
    },
    "files": {
        "ignore": ["_deno", "_site"]
    },
    "formatter": {
        "enabled": true,
        "ignore": ["*.test.ts", "cover-pic/pictures.json"],
        "indentStyle": "space",
        "indentWidth": 4
    },
    "json": {
        "formatter": {
            "trailingCommas": "none"
        }
    },
    "javascript": {
        "formatter": {
            "trailingCommas": "none",
            "quoteStyle": "double",
            "quoteProperties": "preserve"
        },
        "globals": ["Lume", "Deno"]
    },
    "linter": {
        "enabled": true,
        "rules": {
            "all": true,
            "suspicious": {
                "noDoubleEquals": "off",
                "noExplicitAny": "off"
            },
            "style": {
                "noNonNullAssertion": "off",
                "useShorthandArrayType": "off",
                "useConsistentArrayType": {
                    "level": "warn",
                    "options": {
                        "syntax": "generic"
                    }
                },
                "useNodejsImportProtocol": "off",
                "useNamingConvention": {
                    "level": "warn",
                    "options": {
                        "strictCase": false
                    }
                },
                "useFilenamingConvention": {
                    "level": "warn",
                    "options": {
                        "strictCase": false
                    }
                },
                "useShorthandAssign": "off"
            },
            "correctness": {
                "noNodejsModules": "off"
            }
        }
    }
}
